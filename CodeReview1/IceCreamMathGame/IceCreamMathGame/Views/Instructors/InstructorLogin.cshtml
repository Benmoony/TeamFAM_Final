@model IceCreamMathGame.Models.InstructorM

@{
    ViewData["Title"] = "InstructorLogin";
}


<style>
	.button {
		width: 400px;
	}

	.button2 {
		width: 280px;
	}

	.center {
		margin: 0 auto;
	}

	.span {
		display: block;
		text-align: center;
		padding-top: 10px;
	}

	.title {
		border-top: solid 1px lightgrey;
		border-right: solid 1px lightgrey;
		border-left: solid 1px lightgrey;
	}

	.test {
		text-align: center;
	}

	@@media only screen and (max-width: 349px) {
		.button {
			width: 100%;
		}

		.button2 {
			width: 100%;
		}
	}
</style>

<form asp-action="InstructorLogin">
    <div class="form-horizontal">
        <hr />
		<div class="well">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			@if (ViewBag.error != null)
			{
				<div class="form-group">
					<div class="col-md-12 text-center text-danger">@ViewBag.error</div>
				</div>
			}
			<div class="form-group">
				<div class="col-md-12">
					<h2 class="test">Instructor Login</h2>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-12">
					<input asp-for="UserName" placeholder="Enter User Name" class="form-control center text-center" />
					<span asp-validation-for="UserName" class="text-danger span"></span>
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-12">
					<input asp-for="Password" placeholder="Enter Password" type="password" class="form-control center text-center" />
					<span asp-validation-for="Password" class="text-danger span"></span>
				</div>
			</div>
			<div class="form-group text-center">
				<div class="col-md-12">
					<input type="submit" value="Login" class="btn btn-default button" />
				</div>
			</div>
			<div class="form-group text-center">
				<div class="col-md-12">
					<a class="btn btn-default button2" asp-action="InstructorRegister">Create Account</a>
				</div>
			</div>
		</div>
    </div>
</form>

