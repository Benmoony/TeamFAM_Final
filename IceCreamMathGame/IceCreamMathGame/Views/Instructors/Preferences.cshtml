@model IceCreamMathGame.Models.InstructorM

@{
	ViewData["Title"] = "Preferences";
}

<style>

	.button {
		width: 400px;
	}

	.button2 {
		width: 280px;
	}
	.button3 {
		width: 139px;
		margin-bottom: 10px;
	}

	.center {
		margin: 0 auto;
	}

	.span {
		display: block;
		text-align: center;
		padding-top: 10px;
	}

	.title {
		border-top: solid 1px lightgrey;
		border-right: solid 1px lightgrey;
		border-left: solid 1px lightgrey;
	}

	.test {
		text-align: center;
	}

	.text-success {
		color: forestgreen;
		font-size: 25px;
	}

	@@media only screen and (max-width: 349px) {
		.button {
			width: 100%;
		}

		.button2, .button3 {
			width: 100%;
		}
	}
	
</style>


<div class="jumbotron">
	<h2 class="text-center">Preferences</h2>
</div>

<div class="container">
	<div class="row" >

		<div class="col-md-12 text-center update">
			<h3 class="page-header">Update Your Info</h3>
		</div>
		<div class="form-group">
			<div class="col-md-12">
				<input asp-for="UserName" placeholder="Enter User Name" class="form-control center text-center" />
				<span asp-validation-for="UserName" class="text-danger span"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-12">
				<input asp-for="Password" placeholder="Enter Password" class="form-control center text-center" />
				<span asp-validation-for="UserName" class="text-danger span"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-12">
				<input asp-for="Password" placeholder="Re-Enter Password" class="form-control center text-center" />
				<span asp-validation-for="UserName" class="text-danger span"></span>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-12">
				<input asp-for="Email" placeholder="Enter Email" class="form-control center text-center" />
				<span asp-validation-for="UserName" class="text-danger span"></span>
			</div>
		</div>
		<div class="form-group text-center">
			<div class="col-md-12">
				<a class="btn btn-default button3" asp-action="#">Cancel</a>
				<a class="btn btn-default button3" asp-action="#">Update Account</a>
			</div>
		</div>

	</div>

</div>






